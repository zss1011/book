# EditorConfig 配置文件
root = true

[*]
indent_style = space
indent_size = 4
tab_width = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# 针对 .vue 文件的设置
[*.vue]
indent_style = space
indent_size = 4

# 针对 .util 和 .use 文件的设置
[*.js]
indent_style = space
indent_size = 4

[*.ts]
indent_style = space
indent_size = 4

# 针对 HTML 和 CSS 文件的设置
[*.html]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

# 针对 JSON 文件的特殊设置
[*.json]
indent_style = space
indent_size = 2
max_line_length = 200
